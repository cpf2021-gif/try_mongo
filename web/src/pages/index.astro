---
import Layout from '../layouts/Layout.astro';
import About from '../components/About.astro';
---

<Layout title="Welcome to The Simple Blog">
	<h1>Simple Blog</h1>
	<div class="container">
		<a href="/blog">Go to the blog</a>
		<a href="/edit">Create a new md</a>
		<About title='Brought to you by'/>
	</div>
</Layout>

<style>
	h1 {
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.container {
		display: flex;
		justify-content: center;
		flex-direction: column;
		align-items: center;
	}

	a {
		text-decoration: none;
		margin: 10px 0;
	}

</style>
